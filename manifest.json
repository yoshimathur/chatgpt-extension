{
    "manifest_version": 3, 
    "name": "Athena",
    "version": "1.0.0",
    "description": "Chat GPT Chrome Extension - Answer Questions With Ease",

    "action": {
        "default_popup": "/screens/popup.html",
        "default_icon": "/assets/favicon.png"
    }, 

    "permissions": [
        "scripting",
        "activeTab", 
        "tabs"
    ], 

    "content_scripts": [
        {
            "matches": [
                "<all_urls>",
                "http://localhost/*"
            ], 
            "all_frames": true, 
            "js": [
                "/inject/dialog.js",
                "/inject/content.js"
            ],
            "css": [
                "/inject/dialog.css"
            ]
        }
    ],

    "web_accessible_resources": [
        {
            "resources": [
                "/assets/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}